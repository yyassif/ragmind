{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "includePaths": [
    "backend/core/**",
    "backend/api/**"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "poetry"
      ],
      "rangeStrategy": "widen",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchFileNames": [
        "backend/api/**"
      ],
      "matchManagers": [
        "poetry"
      ],
      "rangeStrategy": "pin"
    }
  ],
  "poetry": {
    "enabled": true
  },
  "prConcurrentLimit": 5,
  "minimumReleaseAge": "3 days",
  "prCreation": "not-pending",
  "dependencyDashboard": true
}
